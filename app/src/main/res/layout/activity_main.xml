<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_large_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="LargeImage" />

    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_large_image"
        android:layout_centerHorizontal="true"
        android:text="WebView" />

    <Button
        android:id="@+id/btn_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_web_view"
        android:layout_centerHorizontal="true"
        android:text="RecyclerView" />

    <Button
        android:id="@+id/btn_image_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_recycler_view"
        android:layout_centerHorizontal="true"
        android:text="ImageSelector" />
</RelativeLayout>
